<%= form_for @load_option do |f| %>				

	<%= f.label "Load Combination (LOADCOMBO):" %>
	<select name="load_option[load_combo]">
		<option value="">Load Combination</option>
		<% current_model.load_combos.each do |combo| %>
			<option value=<%= combo.case_name %> <%= @load_option.load_combo == combo.case_name ? "selected='selected'" : "" %> > <%= combo.case_name %> </option>
		<% end %>
	</select>


	<div>
		<%= f.label "Mass Combination (MASSCOMBO):" %>
		<select name="load_option[mass_combo]">
			<option value="">Load Combination</option>
			<% current_model.load_combos.each do |combo| %>
				<option value=<%= combo.case_name %> <%= @load_option.mass_combo == combo.case_name ? "selected='selected'" : "" %> > <%= combo.case_name %> </option>
			<% end %>
		</select>
	</div>
	
	
	<div>
		<%= f.label "Ground Acceleration Multiplier (GAMULT):" %>
		<%= f.text_field :gamult %>
	</div> 
			
	<% if params[:analysis_id] != nil %>
		<!-- Set some param values -->
		<%= hidden_field_tag :model_id, params[:model_id] %>
		<%= hidden_field_tag :analysis_id, params[:analysis_id] %>
		<%= hidden_field_tag :default_id, params[:default_id] %>
	<% end %>
			
	<div class="action">
		<%= button_to "Save", model_analysis_default_load_option_path(current_model.id, current_analysis.id, current_default.id, @load_option.id) %>
	</div>
<% end %>	