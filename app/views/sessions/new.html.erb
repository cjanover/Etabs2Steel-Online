<h1>Login</h1>

<%= form_tag session_path do %>
	<div class="field">
		<%= label_tag :email %><br />
		<%= text_field_tag :email%>
	</div>
	<div class="fied">
		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</div>
	<div class="actions">
		<%= submit_tag 'Login' %>
	</div>
	<div class="actions">
		<%= link_to 'Create New User', new_user_path %>
<% end%>